<section class="playerDetails">
  <div class="displayCardInfo">
    <h4 class="h4Color">"{{playerCard.nickname}}"</h4>
    <hr class="hrNotIndex"/>
    <p class="h4Color">Team: {{playerCard.team}}</p>
    <p class="h4Color">Position: {{playerCard.position}}</p>
    <p class="h4Color">Card Rarity: {{playerCard.rarity}}</p>
    <p class="h4Color">Shirt Number: {{playerCard.shirtNumber}}</p>
    <div class="displayAwards">
    {{#unless playerCard.awards}}
        <p class="h6Color">Awards: None</p>
    {{/unless}}
    {{#if playerCard.awards}}
       <p class="h6Color">Awards: {{#each playerCard.awards}}<p class="h6Color">{{this}} </p>{{/each}}</p>
    {{/if}}
    </div>
  </div>
  <div class="card cardPlayerDetails">
    <div class="image">
      <img class="front" src="{{playerCard.imageCard}}" />
    </div>
    <div class="details">
      <div class="center">
        <h1 class="inside">{{playerCard.name}}<br /><span
            class="insides"
          >{{playerCard.team}}</span></h1>
        <p class="p">{{playerCard.shirtNumber}}</p>
      </div>
    </div>
  </div>
  <div class="displayCardInfo">
    <h4 class="h4Color">Statistics</h4>
    <hr class="hrNotIndex"/>
    <p class="h4color">Points Per Game: {{playerCard.ppg}}</p>
    <p class="h4color">Rebounds Per Game: {{playerCard.rpg}}</p>
    <p class="h4color">Assists Per Game: {{playerCard.apg}}</p>
    <p class="h4color">Player Efficiency Rating: {{playerCard.per}}</p>    
  </div>
</section>