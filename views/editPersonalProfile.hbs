<section class="d-flex align-items-center justify-content-around" id="startlineupSection">
  <div>
    <img
      class="steveKerr"
      src="/images/steverKerr.png"
      alt=""
    />
  </div>
  <div id="formEditProfile" class="signupForm align-self-baseline">
    <div class="editProfileDiv">
      <div class="brand-title"><span style="color:blue">N</span>B<span style="color:red">A</span></div>
      <div class="inputs">
        <form action="/editPersonalProfile/{{_id}}/edit" method="post">

          <label class="labelSignup" for="username">Username</label>
          <input class="inputSignup"
            type="text"
            name="username"
            id="username"
            value="{{username}}"
          />

          <label class="labelSignup" for="GOAT">G.O.A.T</label>
          <input type="text" name="GOAT" id="goat" class="inputSignup" value="{{GOAT}}" />

          <label class="labelSignup" for="password">Password</label>
          <input type="password" name="password" class="inputSignup" id="password" placeholder="Uppercase and Lowercase min 6 chars"/>

          <button type="submit" class="btn btn-outline-warning btn-md saveProfile">Save Changes</button>
        </form>

      </div>
    </div>
  </div>
  <div>
    <img
      class="lebronJames"
      src="/images/Lebron-James-Lakers-PNG-HD-removebg-preview.png"
      alt=""
    />
  </div>
  <div class="absolute2">
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </div>
