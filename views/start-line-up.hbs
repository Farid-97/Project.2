<section id="startlineupSection">
  <div class="courtLineup">
    <div class="round player1 defaultPic"><h6>Player 1</h6></div>
    <div class="round player2 defaultPic"><h6>Player 2</h6></div>
    <div class="round player3 defaultPic"><h6>Player 3</h6></div>
    <div class="round player4 defaultPic"><h6>Player 4</h6></div>
    <div class="round player5 defaultPic"><h6>Player 5</h6></div>
  </div>
  <div class="pickPlayerDiv">
    <form class="pickPlayer" action="/start-line-up/{{user._id}}/edit" method="post">
      <label for="player1" >Choose player 1</label>
      <select name="player1" id="selection1"class="playerLabel btn-sm btn btn-secondary" required>
        {{#each players}}
          <option value="{{_id}}"> {{name}}</option>
        {{/each}}
      </select>
      <label for="player2" >Choose player 2</label>
      <select name="player2" id="selection2" class="playerLabel btn-sm btn btn-secondary">
        {{#each players}}
          <option value="{{_id}}"> {{name}}</option>
        {{/each}}
      </select>
      <label for="player3" class="pickPlayer">Choose player 3</label>
      <select name="player3" id="selection3" class="playerLabel btn-sm btn btn-secondary">
        {{#each players}}
          <option value="{{_id}}"> {{name}}</option>
        {{/each}}
      </select>
      <label for="player4">Choose player 4</label>
      <select name="player4" id="selection4" class="playerLabel btn-sm btn btn-secondary">
        {{#each players}}
          <option value="{{_id}}"> {{name}}</option>
        {{/each}}
      </select>
      <label for="player5" >Choose player 5</label>
      <select name="player5" id="selection5" class="playerLabel btn btn-sm btn btn-secondary">
        {{#each players}}
          <option value="{{_id}}"> {{name}}</option>
        {{/each}}
      </select>
      <button id="submitStartlineup" class="btn btn-outline-warning btn-sm">Save LineUp</button>
    </form>
  </div>
</section>